extends layout

block content
    div.content-wrap
        div.content
            
    div#darken       
    div.row(style="background-color: white;")
        div.large-4.medium-6.medium-centered.large-centered.columns(style="height:8rem;")
            span.vertical-align-helper
            img(src="/images/gueime.png", alt="Gueime Logo")

    div#nav-sticky
        div.nav
            div.row
                div.large-5.medium-9.medium-centered.columns.large-centered
                    input#mainInput(type="text", placeholder="Ache tudo sobre Games!")

        div.contain-to-grid
            div.row
                div.gueimeWhite
                    img(src="/images/gueime-white.png", alt="white logo")
                div.large-3.medium-4.small-8.columns
                    if (!user)
                        a.facebook(href="/auth/facebook") <i class="fa fa-facebook"></i> Login
                    else
                        a(href="/profile").user <i class="fa fa-user"></i> #{user.name.first}
                        a.create(href="/create") <i class="fa fa-pencil-square-o"></i> Create

                div.show-for-small.small-4.columns
                    a.logout(href="/logout") <i class="fa fa-sign-out"></i> sair
                        
                            
                div.large-7.medium-6.columns.small-12#tagSelection

                if(user)
                    div.large-2.medium-2.show-for-medium-up.columns
                            a.logout(href="/logout") <i class="fa fa-sign-out"></i> sair
                else
                    div.large-2.medium-2.show-for-mediu-up.columns


    div#spinning
        img(src="/images/spinning.gif")
    div.row#gridArticles
        div.grid-wrap

        a(href="/artigos/naruto-ganha-novo-dlc", data-link="ajax").item
            div.hidden.infoNews.row
                div.small-12.small-centered.columns.headline
                    p Naruto é um game bem interessante...ganhar do Gabriel é fácil fácil
                div.small-12.small-centered.columns
                    div.row.graph
                        div.large-6.medium-6.small-6.columns
                            span André Lucas
                        div.large-6.medium-6.small-6.columns
                            span.toRight <i class="fa fa-eye"></i> 400<i class="fa fa-comment", style="margin-left:10px;"></i> 30
            div.articleImage(style="background-image: url(http://www.osmais.com/wallpapers/201208/naruto-shippuden-wallpaper.jpg);")
            div.details
                div.name
                    h2.ref Naruto Ganha novo DLC
                
                    


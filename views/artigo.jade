extends layouts/articleLayout

block content
    div#check(style="display:none;") check
    
    header.header.row
        div.content-wrap
            div.content
        div#darken
        div.row#searchBack(style="background-color: white;display:none;")
            div.large-4.medium-6.medium-centered.large-centered.columns(style="height:8rem;")
                span.vertical-align-helper
                img(src="/images/gueime.png", alt="Gueime Logo")

        div#specialLogo.gueimeWhite.show-for-large-up(style="display:block;right:30px;left:auto")
            img(src="/images/gueime-white.png", alt="white logo")

        include partials/nav

    div#wrapper
        section.mainImage(style="background: url('/images/naruto.jpg') no-repeat center -230px;")
            div.wrapImage
                article.bloco


    if(tipo == 'noticia')
        div.parallax(style="border-top:5px solid #27b899;")
            article#mainText
                include partials/noticia
    else if(tipo == 'artigo')
        div.parallax(style="border-top:5px solid rgb(71,158,205);")
            article#mainText
                include partials/artigo
    else
        div.parallax(style="border-top:5px solid #E54C3C;")
            article#mainText
                include partials/analise

    footer.row
        div.large-4.columns
            img(src="/images/gueime-white.png")
            h4 Você está acessando o Gueime 3.0

            p &copy; 2014 - Gueime